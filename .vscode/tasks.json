{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dir (testing shell commands)",
            "type": "shell",
            "command": "dir \"${workspaceFolder}\"",
            "problemMatcher": "$tsc"
        },
        {
            "label": "SqCoreWeb build Debug",       // the official predebugBuild       
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/WebServer/SqCoreWeb/SqCoreWeb.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "SqCoreWeb predebugBuildAndTscWatchTask",
            "type": "shell",
            "isBackground": true,
            "command": "dotnet build \"${workspaceFolder}/src/WebServer/SqCoreWeb/SqCoreWeb.csproj\" \"/property:GenerateFullPaths=true\"  \"/consoleloggerparameters:NoSummary\"; tsc --watch -p \"${workspaceFolder}/src/WebServer/SqCoreWeb/tsconfig.json\"",
            // This task is run before some debug tasks.
            // Problem is, it's a watch script, and since it never exits, VSCode
            // complains. All this is needed so VSCode just lets it run.
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ]
        },
        {
            "label": "SqCoreWeb postdebugKillVsCodeTask",
            "type": "process",
            "command": [
                "${command:workbench.action.tasks.terminate}", // The first "${command:workbench.action.tasks.terminate}" will bring up a panel asking you to select which task to terminate. So if you had multiple running tasks and wanted to choose one you would use this command only.
                "${command:workbench.action.acceptSelectedQuickOpenItem}" // will terminate the selected task in that panel mentioned above. 2019-10-17: it doesn't seem to work. However, manual termination is fine. Maybe it is good that it doesn't work, intentional, so we accidentally don't delete wrong tasks.
            ]
        },
        {
            "label": "SqCoreWeb publish Release",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "--configuration",
                "Release",
                "${workspaceFolder}/src/WebServer/SqCoreWeb/SqCoreWeb.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "SqCoreWeb run (after publish) Release is internalTerminal",
            "type": "shell",
            "command": "Start-Process -FilePath \"SqCoreWeb.exe\"",
            "presentation": {
                "reveal": "never"
            },
            "options": {
                "cwd": "${workspaceFolder}/src/WebServer/SqCoreWeb/bin/Release/netcoreapp3.0/publish"
            },
            "problemMatcher": []
        },
        {
            "label": "PerfTestExperiment run without Debugger Release",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "run",
                "-p",
                "${workspaceFolder}/test/PerfTestExperiment/PerfTestExperiment.csproj",
                "-c",
                "Release"
            ],
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": [
                        "/d",
                        "/c"
                    ]
                }
            },
            "problemMatcher": "$tsc"
        },
        {
            "label": "PerfTestExperiment build Release ",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/test/PerfTestExperiment/PerfTestExperiment.csproj",
                "-c",
                "Release"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "RedisManager build Debug",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Tools/RedisManager/RedisManager.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "BenchmarkDB build Debug",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Tools/BenchmarkDB/BenchmarkDB.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "BenchmarkDB publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Tools/BenchmarkDB/BenchmarkDB.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "BenchmarkDB watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/src/Tools/BenchmarkDB/BenchmarkDB.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": " All SqCore build Debug",
            "dependsOn": [
                "BenchmarkDB build Debug",
                "RedisManager build Debug"
            ]
        }
    ]
}