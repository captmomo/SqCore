{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dir (testing shell commands)",
            "type": "shell",
            "command": "dir \"${workspaceFolder}\"",
            "problemMatcher": "$tsc"
        },
        {
            "label": "SqCoreWeb-BuildWatchDebug",
            "dependsOn": [
                "SqCoreWeb-BuildDevPreDebug.py",    // this will be waited until finished as 'process' in VsCode Terminal window
                "SqCoreWeb-WatchDevPreDebug.py"     // this will return immediately as it starts a shell CMD external window.
            ]
        },
        {
            "label": "SqCoreWeb-BuildDevPreDebug.py",
            "type": "process",      // process is run inside terminal and it waits until it is finished.
            "command": "python",
            "args": [
                "${workspaceFolder}/src/WebServer/SqCoreWeb/BuildDevPreDebug.py"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src/WebServer/SqCoreWeb"
            },
            "problemMatcher": []
        },
        {
            "label": "SqCoreWeb-WatchDevPreDebug.py",
            "type": "shell",    // shell will not wait, but return immediately to the caller.
            "command": "${workspaceFolder}/src/WebServer/SqCoreWeb/WatchDevPreDebug.py",
            "options": {
                "cwd": "${workspaceFolder}/src/WebServer/SqCoreWeb"
            },
            "problemMatcher": []
        },
        {
            "label": "SqCoreWeb-BuildWatchOneDevPostDebug.py",
            "type": "shell",
            "command": "${workspaceFolder}/src/WebServer/SqCoreWeb/BuildWatchOneDevPostDebug.py",
            "options": {
                "cwd": "${workspaceFolder}/src/WebServer/SqCoreWeb"
            },
            "problemMatcher": []
        },
        {
            "label": "SqCoreWeb build Debug",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/WebServer/SqCoreWeb/SqCoreWeb.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "SqCoreWeb predebugBuildAndTscWatchTask",
            "type": "shell",
            "isBackground": true,
            "command": "dotnet build \"${workspaceFolder}/src/WebServer/SqCoreWeb/SqCoreWeb.csproj\" \"/property:GenerateFullPaths=true\"  \"/consoleloggerparameters:NoSummary\"; tsc --watch -p \"${workspaceFolder}/src/WebServer/SqCoreWeb/tsconfig.json\"",
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ]
        },
        {
            "label": "SqCoreWeb postdebugKillVsCodeTask",
            "type": "process",
            "command": [
                "${command:workbench.action.tasks.terminate}",
                "${command:workbench.action.acceptSelectedQuickOpenItem}"
            ]
        },
        {
            "label": "SqCoreWeb publish Release",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "--configuration",
                "Release",
                "${workspaceFolder}/src/WebServer/SqCoreWeb/SqCoreWeb.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "SqCoreWeb run (after publish) Release is internalTerminal",
            "type": "shell",
            "command": "Start-Process -FilePath \"SqCoreWeb.exe\"",
            "presentation": {
                "reveal": "never"
            },
            "options": {
                "cwd": "${workspaceFolder}/src/WebServer/SqCoreWeb/bin/Release/netcoreapp3.0/publish"
            },
            "problemMatcher": []
        },
        {
            "label": "PerfTestExperiment run without Debugger Release",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "run",
                "-p",
                "${workspaceFolder}/test/PerfTestExperiment/PerfTestExperiment.csproj",
                "-c",
                "Release"
            ],
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": [
                        "/d",
                        "/c"
                    ]
                }
            },
            "problemMatcher": "$tsc"
        },
        {
            "label": "PerfTestExperiment build Release ",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/test/PerfTestExperiment/PerfTestExperiment.csproj",
                "-c",
                "Release"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "RedisManager build Debug",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Tools/RedisManager/RedisManager.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "BenchmarkDB build Debug",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Tools/BenchmarkDB/BenchmarkDB.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "BenchmarkDB publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Tools/BenchmarkDB/BenchmarkDB.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "BenchmarkDB watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/src/Tools/BenchmarkDB/BenchmarkDB.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": " All SqCore build Debug",
            "dependsOn": [
                "BenchmarkDB build Debug",
                "RedisManager build Debug"
            ]
        }
    ]
}